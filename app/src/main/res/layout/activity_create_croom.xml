<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saiteja.eaglesmain.CreateCRoom">

    <EditText
        android:id="@+id/cf_name"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_below="@+id/textView3"
        android:layout_marginTop="50dp"
        android:hint="Name"
        android:inputType="textPersonName"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="39dp" />

    <EditText
        android:id="@+id/cf_email"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cf_name"
        android:ems="10"
        android:layout_marginTop="30dp"
        android:hint="Email ID"
        android:inputType="textWebEmailAddress"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="97dp" />

    <EditText
        android:id="@+id/cf_phone"
        android:layout_width="368dp"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cf_email"
        android:ems="10"
        android:hint="Phone"
        android:inputType="phone"
        android:textAlignment="center"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="161dp" />

    <EditText
        android:id="@+id/cf_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/cf_phone"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/cf_seats"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cf_address"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="Number of Seats"
        android:inputType="number"
        android:textAlignment="center" />

    <Button
        android:id="@+id/create"
        android:layout_width="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/cf_phone"
        android:layout_below="@+id/cf_seats"
        android:layout_marginEnd="38dp"
        android:onClick="addConference"
        android:text="Create Room" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:textColor="#000"
        android:layout_alignParentTop="true"
        android:text="Enter the Conference Room Details"
        android:textSize="25dp"/>


</RelativeLayout>
</ScrollView>
