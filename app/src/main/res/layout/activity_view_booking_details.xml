<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android" >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.saiteja.eaglesmain.ViewBookingDetails">


    <TextView
        android:id="@+id/c_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/c_stdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="TextView"
        android:layout_below="@+id/c_name"
        android:layout_alignStart="@+id/c_name" />

    <TextView
        android:id="@+id/c_endate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="TextView"
        android:layout_below="@+id/c_stdate"
        android:layout_alignStart="@+id/c_stdate" />

    <TextView
        android:id="@+id/c_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/c_endate"
        android:layout_below="@+id/c_endate"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="TextView" />

    <TextView
        android:id="@+id/c_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textSize="22sp"
        android:text="TextView"
        android:layout_below="@+id/c_status"
        android:layout_alignStart="@+id/c_status" />

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:onClick="cancelBooking"
        android:text="Cancel this booking"
        android:layout_below="@+id/c_session"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
</ScrollView>
